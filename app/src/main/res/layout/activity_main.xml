<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yazuke.applimobilemachine_a_sous.MainActivity">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_normal"
        android:orientation="vertical">
    <!--tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="75dp"
    tools:ignore="MissingConstraints">/-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!--<ProgressBar
            android:id="@+id/barreProgression"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:visibility="gone" />-->
            <Button
                android:id="@+id/combo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="@string/combo"
                android:onClick="combo"/>


            <TextView
                android:id="@+id/txtAsync"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Recu : " />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/multiplicateur" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1x"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:text="@string/button1x" />

                <Button
                    android:id="@+id/button2x"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_below="@+id/button1x"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:text="@string/button2x" />

                <Button
                    android:id="@+id/button5x"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_below="@+id/button2x"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:text="@string/button5x" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/total" />

            <Button
                android:layout_width="10px"
                android:layout_height="150px"
                android:layout_weight="1"
                android:background="@drawable/menu"
                android:onClick="showPopup" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingBottom="30dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/defaultRouleau1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="4dp" />


                <ImageView
                    android:id="@+id/r1_0"
                    android:layout_width="25dp"

                    android:layout_height="25dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/fraise" />


                <ImageView
                    android:id="@+id/r1_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/cloche" />

                <ImageView
                    android:id="@+id/r1_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/orange" />

                <ImageView
                    android:id="@+id/r1_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/r1_2"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/cherry" />

                <ImageView
                    android:id="@+id/r2_0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/r2_1"
                    android:layout_alignStart="@+id/r2_1"
                    android:layout_alignTop="@+id/r3_0"
                    android:src="@drawable/orange" />

                <ImageView
                    android:id="@+id/r2_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="75dp"
                    android:src="@drawable/cherry" />

                <ImageView
                    android:id="@+id/r2_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/r2_1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/cloche" />

                <ImageView
                    android:id="@+id/r2_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/r2_2"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/pasteque" />

                <ImageView
                    android:id="@+id/r3_0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="-70dp"
                    android:src="@drawable/citron" />

                <ImageView
                    android:id="@+id/r3_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="145dp"
                    android:src="@drawable/fraise" />

                <ImageView
                    android:id="@+id/r3_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/r3_1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/cherry" />

                <ImageView
                    android:id="@+id/r3_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/r3_2"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/sept" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_levier"
                android:layout_width="60dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/background_levier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/levier_background" />

                <ImageView
                    android:id="@+id/levier"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/levier" />

                <ImageView
                    android:id="@+id/target"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignLeft="@+id/levier"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/levier" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button-stop1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/stopper"
                android:onClick="arretRouleau"
                android:text="X" />

            <Button
                android:id="@+id/button-stop2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/stopper"
                android:onClick="arretRouleau"
                android:text="X" />

            <Button
                android:id="@+id/button-stop3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/stopper"
                android:onClick="arretRouleau"
                android:text="X" />


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
