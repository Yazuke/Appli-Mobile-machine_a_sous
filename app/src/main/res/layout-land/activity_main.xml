<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yazuke.applimobilemachine_a_sous.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/multiplicateur"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button1x"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/button1x" />
                <Button
                    android:id="@+id/button2x"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/button2x" />
                <Button
                    android:id="@+id/button5x"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/button5x" />
            </RelativeLayout>

            <EditText
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/r1_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/cherry" />

            <ImageView
                android:id="@+id/r1_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/r1_1"
                android:layout_marginTop="20dp"
                android:src="@mipmap/cherry" />

            <ImageView
                android:id="@+id/r1_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/r1_2"
                android:layout_marginTop="20dp"
                android:src="@mipmap/cherry" />

            <ImageView
                android:id="@+id/r2_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:src="@mipmap/cherry" />

            <ImageView
                android:id="@+id/r2_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/r2_1"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/cherry" />

            <ImageView
                android:id="@+id/r2_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/r2_2"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/cherry" />

            <ImageView
                android:id="@+id/r3_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:src="@mipmap/cherry" />

            <ImageView
                android:id="@+id/r3_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/r2_1"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/cherry" />

            <ImageView
                android:id="@+id/r3_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/r2_2"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/cherry" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
